<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:keepScreenOn="true"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/interval1Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1st interval time in mins"
        app:layout_constraintBottom_toTopOf="@id/interval1Input"
        app:layout_constraintStart_toStartOf="@id/interval1Input" />

    <EditText
        android:id="@+id/interval1Input"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:hint="Interval 1 (s)"
        android:inputType="number"
        android:text="90"
        app:layout_constraintEnd_toStartOf="@+id/interval2Input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"/>

    <TextView
        android:id="@+id/interval2Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2nd interval time in mins"
        app:layout_constraintBottom_toTopOf="@id/interval2Input"
        app:layout_constraintStart_toStartOf="@id/interval2Input" />

    <EditText
        android:id="@+id/interval2Input"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:hint="Interval 2 (s)"
        android:inputType="number"
        android:text="60"
        app:layout_constraintStart_toEndOf="@id/interval1Input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"/>

    <TextView
        android:id="@+id/totalDurationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop after X mins"
        app:layout_constraintBottom_toTopOf="@id/totalDurationInput"
        app:layout_constraintStart_toStartOf="@id/totalDurationInput" />

    <EditText
        android:id="@+id/totalDurationInput"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:hint="Total Time (min)"
        android:inputType="number"
        android:text="25"
        app:layout_constraintTop_toBottomOf="@id/interval1Input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/saveIntervalsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintTop_toBottomOf="@+id/totalDurationInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="72sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/intervalText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveIntervalsButton" />

    <TextView
        android:id="@+id/intervalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interval: 60s"
        android:textSize="24sp"
        android:textColor="#666666"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/timerText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/totalTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Time: 00:00"
        android:textSize="20sp"
        android:textColor="#D3D3D3"
        app:layout_constraintBottom_toTopOf="@id/startStopButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/startStopButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Start"
        android:textSize="18sp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/intervalText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/restButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Rest"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/startStopButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
